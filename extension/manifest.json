{
  "manifest_version": 2,

  "name": "WhoDat",
  "description": "Find anyone's email.",
  "version": "0.1",

  "permissions": [
    "http://getwhodat.herokuapp.com/",
    "contextMenus"
  ],

  "background": {
    "persistent": true,
    "scripts": ["bg.js", "jquery.min.js"]
  },

  "icons": {
    "16": "img/logo19.png",
    "48": "img/logo19.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "bootstrap.min.js", "content.js"],
      "css": ["bootstrap.min.css"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "img/logo19.png",
      "38": "img/logo38.png"
      },
    "default_popup": "popup.html"
    }
}
